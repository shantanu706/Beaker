<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="30pt"
                android:fontFamily="cursive"
                android:text="Beaker"
                android:textColor="@color/colorAccent"
                android:textSize="80sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginRight="5pt"
                android:layout_marginBottom="0pt"
                android:text="College "
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/news"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="0pt"
                        android:layout_marginTop="10pt"
                        android:layout_marginBottom="10pt"
                        android:background="#000000"
                        app:cardCornerRadius="0dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#000000"
                            app:srcCompat="@drawable/newser" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="NEWS"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/events"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="-7pt"
                        android:layout_marginTop="10pt"
                        android:layout_marginRight="0pt"
                        android:layout_marginBottom="10pt"
                        android:background="#000000"
                        app:cardCornerRadius="0dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|top"
                            android:background="#000000"
                            app:srcCompat="@drawable/events_img" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#00FFFFFF"
                            android:text="Events"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sugg"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="-5pt"
                        android:layout_marginTop="10pt"
                        android:layout_marginBottom="10pt"
                        android:background="@drawable/suggest"
                        app:cardBackgroundColor="#000000"
                        app:cardCornerRadius="0dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="2pt"
                            android:layout_marginRight="2pt"
                            android:background="@drawable/suggest" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="Suggestions"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginRight="5pt"
                android:layout_marginBottom="5pt"
                android:text="Upcoming Activities "
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40pt">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/newer"
                        android:layout_width="170dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="5pt"
                        android:layout_marginTop="5pt"
                        android:layout_marginRight="5pt"
                        app:cardCornerRadius="15dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="300dp"
                        android:layout_marginTop="5pt"
                        app:cardCornerRadius="15dp" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>